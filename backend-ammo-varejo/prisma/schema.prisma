datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id             Int     @id @default(autoincrement())
  name           String
  price          Float
  description    String
  category       String
  promotionPrice Float?
  images         Image[]
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}
